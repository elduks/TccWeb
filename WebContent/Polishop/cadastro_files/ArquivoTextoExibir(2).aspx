
/* POLISHOP : LOGIN */
/* v1.0 */

	body.login
	{
		font-family: Arial, Helvetica, sans-serif;
		font-size: 11px;
		color: #828282;
	}
	
	.login div
	{
		display: block;
	}
	
	.login .content
	{
		clear: both;
		position: relative;
		display: block;
		width: 980px;
		height: auto;
		left: 50%;
		top: 110px;
		margin: 30px 0 130px -490px;
		border: #dedede solid 1px;
	}
	
		.login .content h2
		{
			display: block;
			float: left;
			width: 334px;
			height: 58px;
			background-image: url("https://www2.polishop.com.br/Control/ArquivoExibir.aspx?NomeArquivo=checkout.gif");
			background-position: -10px -231px;
			text-indent: -99999px;
			margin: 20px 0 20px 50px;
		}
		
		.login .mainWrapper
		{
			clear: both;
			display: block;
			margin-top: 30px;
			width: 940px;
			height: 300px;
			margin: 0 0 20px 20px;
			border-top: dotted 1px #a6a6a6;
		}
		
			.login .register-info
			{
				display: block;
				width: 380px;
				float: left;
				margin: 30px 0 0 95px;
			}
			
			.login .register-info h4
			{
				display: block;
				float: left;
				width: 356px;
				height: 23px;
				background-image: url("https://www2.polishop.com.br/Control/ArquivoExibir.aspx?NomeArquivo=checkout.gif");
				background-position: -10px -460px;
				margin: 0 0 25px 0;
				text-indent: -99999px;
			}
			
			.login .register-info p
			{
				display: block;
				clear: both;
				font-size: 12px;
				color: #4e4e4e4;
				line-height: 14px;
				margin: 0 0 7px 0;
			}
			
			.login .register-info .vantagens, .login hr, .login div.prodContentContainer
			{
				display: none;
			}
			
			.login .register-info a.bt, .login .register-info a.bt:link, .login .register-info a.bt:visited, .login .register-info a.bt:active
			{
				display: block;
				clear: both;
				width: 304px;
				height: 38px;
				margin: 20px 0 20px 20px;
				background-image: url("https://www2.polishop.com.br/Control/ArquivoExibir.aspx?NomeArquivo=botoes.gif");
				background-position: -10px -49px;
				text-indent: -99999px;
			}
			
				.login .register-info a.bt:hover
				{	
					background-position: -10px -49px;
				}
				
			.login .sign-in
			{
				display: block;
				width: 300px;				
				float: left;
				margin: 30px 0 0 90px;
			}
			
			.login .sign-in h4
			{
				width: 195px;
				height: 22px;
				background-image: url("https://www2.polishop.com.br/Control/ArquivoExibir.aspx?NomeArquivo=checkout.gif");
				background-position: -10px -484px;
				text-indent: -99999px;
			}
			
			.login .sign-in p
			{
				display: none;
			}
			
			.login .sign-in .sign-in-core
			{
				display: block;
				margin: 25px 0 0 0;
			}
			
			.login .sign-in table
			{
				color: #4e4e4e;
				font-weight: bold;
				font-size: 13px;
			}
			
			.login .sign-in table input
			{
				width: 200px;
				margin: 0 0 0 10px;
			}
			
			.login .sign-in table input.bt
			{
				display: block;
				clear: both;
				width: 191px;
				height: 38px;
				margin: 20px 0 20px 65px;
				border: none;
				background: #FFF;
				background-image: url("https://www2.polishop.com.br/Control/ArquivoExibir.aspx?NomeArquivo=botoes.gif");
				background-position: -10px -88px;
				text-indent: -99999px;
			}
			
			.login .sign-in table a.submit, .login .sign-in table a.submit:link,.login .sign-in table  a.submit:visited, .login .sign-in table a.submit:active
			{
				display: block;
				clear: both;
				width: 191px;
				height: 38px;
				margin: 20px 0 20px 65px;
				background-image: url("https://www2.polishop.com.br/Control/ArquivoExibir.aspx?NomeArquivo=botoes.gif");
				background-position: -10px -88px;
				text-indent: -99999px;
			}
			
				.login .sign-in table a.submit:hover:hover
				{	
					background-position: -10px -127px;
				}
				
				.login .sign-in table a.lnkMudancaEmail, .login .sign-in table a.lnkMudancaEmail:link, .login .sign-in table a.lnkMudancaEmail:visited, .login .sign-in table a.lnkMudancaEmail:active
				{
					display: block;
					width: 150px;
					height: 13px;
					color: #a6a6a6;
					font-size: 10px;
					text-decoration: underline;
					font-weight: normal;
					background-image: url("https://www2.polishop.com.br/Control/ArquivoExibir.aspx?NomeArquivo=checkout.gif");
					background-position: -441px -10px;
					padding: 2px 0 0 20px;
					margin: 7px 0 5px 65px;
				}
				
					.login .sign-in table a.lnkMudancaEmail:hover
					{
						color: #716f6f;
					}
				
				.login .sign-in table a.lnkEsqueciEmail, .login .sign-in table a.lnkEsqueciEmail:link, .login .sign-in table a.lnkEsqueciEmail:visited, .login .sign-in table a.lnkEsqueciEmail:active
				{
					display: block;
					width: 150px;
					height: 13px;
					color: #a6a6a6;
					font-size: 10px;
					text-decoration: underline;
					font-weight: normal;
					background-image: url("https://www2.polishop.com.br/Control/ArquivoExibir.aspx?NomeArquivo=checkout.gif");
					background-position: -441px -10px;
					padding: 2px 0 0 20px;
					margin: 0 0 8px 65px;
				}
				
					.login .sign-in table a.lnkEsqueciEmail:hover
					{
						color: #716f6f;
					}
				
				.login .sign-in table a.lnkEsqueciSenha, .login .sign-in table a.lnkEsqueciSenha:link, .login .sign-in table a.lnkEsqueciSenha:visited, .login .sign-in table a.lnkEsqueciSenha:active
				{
					width: 150px;
					display: block;
					height: 13px;
					color: #a6a6a6;
					font-size: 10px;
					text-decoration: underline;
					font-weight: normal;
					background-image: url("https://www2.polishop.com.br/Control/ArquivoExibir.aspx?NomeArquivo=checkout.gif");
					background-position: -441px -10px;
					padding: 2px 0 0 20px;
					margin: 7px 0 3px 65px;
				}
				
					.login .sign-in table a.lnkEsqueciSenha:hover
					{
						color: #716f6f;
					}
	
	.login .sign-in .aviso-erro
	{
		display: none;
	}
			
	.login .aviso-erro
	{
		background-color: #fff480;
		display: block;
		line-height: 14px;
		padding: 12px;
		position: absolute;
		right: 20px;
		top: 20px;
		-moz-border-radius: 12px;
		-webkit-border-radius: 12px;
	}
	
	.login .aviso-erro ul
	{
		display: block;
		padding: 5px 0 0 52px;
	}
	
	.login .aviso-erro ul li
	{
		color: #F00;
		font-size: 13px;
	}
	
	.login a.oldCustomerLogin
	{
		background-color: #ffffaa;
		color: #686868;
		display: block;
		font-size: 12px;
		line-height: 14px;
		width: 280px;
		border-top: solid 1px #dedede;
		text-decoration: none;
		padding: 10px;
		margin: 12px 0 0 20px;
		-moz-border-radius-bottomleft: 12px;
		-moz-border-radius-bottomright: 12px;
		-webkit-border-bottom-left-radius: 12px;
		-webkit-border-bottom-right-radius: 12px;
	}